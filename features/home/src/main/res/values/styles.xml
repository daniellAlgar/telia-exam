<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CurrentForecastTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/vertical_rhythm_8</item>
        <item name="android:layout_marginStart">@dimen/horizontal_rhythm_8</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_rhythm_8</item>
    </style>

    <style name="CurrentForecastTemperature">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/vertical_rhythm_8</item>
        <item name="android:layout_marginBottom">@dimen/vertical_rhythm_16</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_rhythm_32</item>
    </style>

    <style name="CurrentForecastIcon">
        <item name="android:layout_marginStart">@dimen/horizontal_rhythm_32</item>
    </style>
</resources>